<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A4689">

    <ScrollView
        android:id="@+id/sl3"
        android:layout_width="354dp"
        android:layout_height="655dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/imv_blue"
                    android:layout_width="343dp"
                    android:layout_height="138dp"
                    android:background="@drawable/btn_top_blue"
                    android:backgroundTint="#2E4DA4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/img_logo"
                    android:layout_width="121dp"
                    android:layout_height="92dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/logo_kgm" />

                <TextView
                    android:id="@+id/idub"
                    android:layout_width="246dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="8dp"
                    android:text="Agregar Producto"
                    android:textAlignment="center"
                    android:textColor="#f1cb0b"
                    android:textSize="25dp"
                    android:textStyle="bold|italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.84" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="451dp"
                android:background="@drawable/text_edit_white"
                android:backgroundTint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.381">

                <LinearLayout
                    android:id="@+id/from_subcategori"
                    android:layout_width="330dp"
                    android:layout_height="357dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.236">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtcodigo_id"
                            android:layout_width="172dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/codigo_producto"
                            android:textColor="#4D5358"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/aditCodeProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="55sp"
                            android:layout_weight="1"
                            android:backgroundTint="#96A2AB"
                            android:ems="10"
                            android:hint="Codigo Producto"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textColorHint="#ADB8BF" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_nombre_subc"
                            android:layout_width="174dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/name_producto"
                            android:textColor="#4D5358"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/addNameProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="55sp"
                            android:layout_weight="1"
                            android:backgroundTint="#BE515454"
                            android:ems="10"
                            android:hint="Nombre Producto"
                            android:inputType="textPersonName"
                            android:textColor="@color/black"
                            android:textColorHint="#ADB8BF" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_date"
                            android:layout_width="169dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/Valor_producto"
                            android:textColor="#4D5358"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/addValueProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="55sp"
                            android:layout_weight="1"
                            android:backgroundTint="#96A2AB"
                            android:ems="10"
                            android:hint="Valor Unitario"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textColorHint="#ADB8BF" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/cantidad_regis"
                            android:layout_width="171dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/cantidad_dispo_product"
                            android:textColor="#4D5358"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/addAmountProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="55sp"
                            android:layout_weight="1"
                            android:backgroundTint="#96A2AB"
                            android:ems="10"
                            android:hint="Cantidad"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textColorHint="#ADB8BF" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_img"
                            android:layout_width="173dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/Precio_para_clinetes"
                            android:textColor="#4D5358"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/addPriceProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="55sp"
                            android:layout_weight="1"
                            android:backgroundTint="#96A2AB"
                            android:ems="10"
                            android:hint="Precio estimado de"
                            android:inputType="numberDecimal"
                            android:textColor="@color/black"
                            android:textColorHint="#ADB8BF" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="337dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Categoria"
                            android:textColor="#4D5358"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/addCategoryProduct"
                            android:layout_width="106dp"
                            android:layout_height="55sp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="Categoria"
                            android:inputType="textPersonName"
                            android:textColor="@color/black"
                            android:textColorHint="#ADB8BF" />
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/addBtn"
                    android:layout_width="128dp"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/purple_500"
                    android:text="Agregar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.854"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/from_subcategori"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/addCancelBtn"
                    android:layout_width="130dp"
                    android:layout_height="52dp"
                    android:layout_marginBottom="4dp"
                    android:backgroundTint="@color/design_default_color_error"
                    android:text="Cancelar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.075"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/from_subcategori"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>